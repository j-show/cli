{
  "name": "@jshow/cli",
  "version": "1.0.0",
  "description": "A simple CLI tool for j-show",
  "license": "MIT",
  "homepage": "https://github.com/j-show/cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j-show/cli.git"
  },
  "bugs": {
    "url": "https://github.com/j-show/cli/issues"
  },
  "keywords": [
    "cli",
    "jshow",
    "jshow-cli"
  ],
  "bin": {
    "jshow": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "README.md",
    "README_CN.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "engines": {
    "pnpm": ">=10"
  },
  "scripts": {
    "prepare": "husky install",
    "precommit": "lint-staged",
    "clean": "rm -rf ./dist && rm -rf ./out",
    "start": "ts-node-esm ./src/cli.ts",
    "build": "vite build",
    "test": "vitest --run"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^22",
    "eslint": "^9",
    "eslint-config-jshow": "^1.0.11",
    "eslint-config-prettier": "latest",
    "eslint-plugin-jshow": "^1.0.12",
    "eslint-plugin-prettier": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "prettier": ">=3",
    "semver": "^7.7.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8",
    "vite": "^7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4"
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowJs": true
    }
  }
}
